<div class="section">
    {{#each model as |store|}}
    <section class="color-group {{store.color}}-bricks">
        <h1>{{ store.color }}</h1>
        {{#each store.bricks as |brick|}}
        <section class="{{if store.onSale 'on-sale' ''}}">
            <p class="brick-size">Size: {{ brick.size }}</p>
            <p class="brick-quantity">Quantity: {{ brick.quantity }}</p>
        </section>
        {{/each}}
    </section>
    {{/each}}
</div>

{{outlet}}