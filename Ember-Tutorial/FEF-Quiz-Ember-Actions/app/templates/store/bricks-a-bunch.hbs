<section class="row color-group red-bricks">
  <h2>Red</h2>
  {{#each-in model.items as |size stats|}}
    <div class="col-md-4 well">
      <p>Size: {{size}}</p>
      <p>Price: {{stats.price}}</p>
      <p>Quantity: {{stats.quantity}}</p>
      <button {{action 'addToCart' 'red' size stats.price }}>
          + Add to Cart
      </button>
    </div>
  {{/each-in}}
</section>

<div class="row">
  <ul>
    {{#each model.cart as |product|}}
        <li class="cart-item">
            <p>{{product.color}}</p>
            <p>{{product.size}}</p>
            <p>{{product.price}}</p>
        </li>
    {{/each}}
  </ul>
</div>

{{outlet}}